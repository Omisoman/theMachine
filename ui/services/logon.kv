FloatLayout:
    Label:
        id: machine_label
        text: "theMachine()"
        font_name: "fonts/PressStart2P-Regular.ttf"
        font_size: 48
        color: 1, 1, 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: None, None
        size: self.texture_size

    HoverImage:
        id: google_logon
        source: "google.png"
        anim_delay: 0
        size_hint: None, None
        size: 170, 80
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        on_touch_down: if self.collide_point(*args[1].pos): app.animate_and_sign_in()