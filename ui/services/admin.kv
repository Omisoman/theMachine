#PENDING DEVELOPMENT
FloatLayout:
    HoverButton:
        text: "< home"
        font_name: "fonts/PressStart2P-Regular.ttf"
        font_size: 24
        size_hint: None, None
        size: self.texture_size
        background_normal: ''
        background_color: 0, 0, 0, 0
        color: 0.5, 0.5, 0.5, 1
        pos_hint: {"center_x": 0.1, "center_y": 0.9}
        on_press: app.load_home()

    Label:
        text: "[ADMIN]"
        font_name: "fonts/PressStart2P-Regular.ttf"
        font_size: 24
        color: 1, 1, 1, 1
        size_hint: None, None
        size: self.texture_size
        pos_hint: {"center_x": 0.5, "center_y": 0.9}

    HoverButton:
        id: function_deployer
        text: "function hub deployer"
        font_name: "fonts/PressStart2P-Regular.ttf"
        font_size: 24
        size_hint: None, None
        size: self.texture_size
        background_normal: ''
        background_color: 0, 0, 0, 0
        color: 0.5, 0.5, 0.5, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
        on_press: app.cloud_deployer('function_deployer')

    HoverButton:
        id: script_deployer
        text: "script deployer"
        font_name: "fonts/PressStart2P-Regular.ttf"
        font_size: 24
        size_hint: None, None
        size: self.texture_size
        background_normal: ''
        background_color: 0, 0, 0, 0
        color: 0.5, 0.5, 0.5, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        on_press: app.cloud_deployer('script_deployer')
